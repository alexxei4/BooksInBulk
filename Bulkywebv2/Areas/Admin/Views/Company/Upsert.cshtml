@model Company

<form method="post" class="row" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary"
                        style="text-shadow:
                        1px 1px 0 #ffffff,
                        -1px -1px 0 #ffffff,
                        1px -1px 0 #ffffff,
                        -1px 1px 0 #ffffff;">
                        @(Model.Id != 0 ? "Update" : "Create") Company
                    </h2>
                    <hr />
                </div>
                <div asp-validation-summary="None"></div>
                <div class="mb-3 row">
                    <label asp-for="Name" class="p-0">Name</label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3 row">
                    <label asp-for="PhoneNumber" class="p-0">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
                <div class="mb-3 row">
                    <label asp-for="StreetAddress" class="p-0">Street Address</label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>

                </div>
                <div class="mb-3 row">
                    <label asp-for="City" class="p-0">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>

                </div>
                <div class="mb-3 row">
                    <label asp-for="State" class="p-0">State</label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>

                </div>
                <div class="mb-3 row">
                    <label asp-for="PostalCode" class="p-0">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>

                </div>
                

                <div class="row">
                    <div class="col-6">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }


                    </div>
                    <div class="col-6">
                        <a asp-controller="company" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                    </div>

                </div>

            </div>

        </div>
        
    </div>
   

</form>
