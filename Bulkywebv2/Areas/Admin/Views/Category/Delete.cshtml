@model Category


<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"
                style="text-shadow:
            1px 1px 0 #ffffff,
            -1px -1px 0 #ffffff,
            1px -1px 0 #ffffff,
            -1px 1px 0 #ffffff;">
                Delete Category
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for="Name" type="text" disabled class="form-control" />
        
        </div>
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder"  dsiabled class="form-control" />
 

        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>

        </div>

    </div>

</form>

@section Scripts{}
