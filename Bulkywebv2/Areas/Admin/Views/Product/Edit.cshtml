@model Bulky.Models.Product


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit product</h2>
            <hr />
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3 row">
            <label asp-for="Title" class="p-0">Title</label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" class="p-0">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN" class="p-0">ISBN</label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Author" class="p-0">Author</label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="ListPrice" class="p-0">List Price</label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Price" class="p-0">Price 1-49</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Price50" class="p-0">Price 50-99</label>
            <input asp-for="Price50" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Price100" class="p-0">Price 100+</label>
            <input asp-for="Price100" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Update</button>

            </div>
            <div class="col-6">
                <a asp-controller="product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>

        </div>

    </div>

</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />

    }


}