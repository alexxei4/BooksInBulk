@model ProductVM


<form method="post" class="row" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class ="text-primary">@(Model.Product.Id!=0?"Update":"Create")Product</h2>
            <hr/>
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3 row">
            <label asp-for="Product.Title" class="p-0">Title</label>
            <input asp-for="Product.Title" type="text" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Description" class="p-0">Description</label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.ISBN" class="p-0">ISBN</label>
            <input asp-for="Product.ISBN" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Author" class="p-0">Author</label>
            <input asp-for="Product.Author" class="form-control" />
            <span asp-validation-for="Product.Author" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.ListPrice" class="p-0">List Price</label>
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Price" class="p-0">Price 1-49</label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Price50" class="p-0">Price 50-99</label>
            <input asp-for="Product.Price50" class="form-control" />
            <span asp-validation-for="Product.Price50" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.Price100" class="p-0">Price 100+</label>
            <input asp-for="Product.Price100" class="form-control" />
            <span asp-validation-for="Product.Price100" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.CategoryId" class="p-0">Category Id</label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList">
                <option disabled selected>-- Select Category --</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

        </div>
        <div class="mb-3 row">
            <label asp-for="Product.ImageUrl" class="p-0">Image URL</label>
            <input type ="file" class="form-control border-0 shadow"/>
            

        </div>

        <div class ="row">
            <div class="col-6">
                @if (Model.Product.Id != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
                
                
            </div>
            <div class="col-6">
                <a asp-controller="product" asp-action="Index" class="btn btn-outline-secondary form-control" >Back To List</a>
            </div>
           
        </div>
        
    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    
    }
            

}